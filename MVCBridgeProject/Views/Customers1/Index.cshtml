@model IEnumerable<MVCBridgeProject.Models.Customer>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="container">
    <div class="row">
        <div class="col">@Html.DisplayNameFor(model => model.Address.StreetName)</div>
        <div class="col">@Html.DisplayNameFor(model => model.CustomerName)</div>
        <div class="col">@Html.DisplayNameFor(model => model.CustomerEmail)</div>
        <div class="col">@Html.DisplayNameFor(model => model.CustomerPhone)</div>
        <div class="col">@Html.DisplayNameFor(model => model.FavoriteDrink)</div>
        <div class="col">@Html.DisplayNameFor(model => model.FavoriteMeal)</div>
        <div class="col">@Html.DisplayNameFor(model => model.LargestBill)</div>

    </div>
</div>
    <div class="container">
        @foreach (var item in Model)
        {
        <div class="row">
            <div class="col">@Html.DisplayFor(modelItem => item.Address.StreetName)</div>
            <div class="col">@Html.DisplayFor(modelItem => item.CustomerName)</div>
            <div class="col">@Html.DisplayFor(modelItem => item.CustomerEmail)</div>
            <div class="col">@Html.DisplayFor(modelItem => item.CustomerPhone)</div>
            <div class="col">@Html.DisplayFor(modelItem => item.FavoriteDrink)</div>
            <div class="col">@Html.DisplayFor(modelItem => item.FavoriteMeal)</div>
            <div class="col">@Html.DisplayFor(modelItem => item.LargestBill)</div>
            <div class="col">
                @Html.ActionLink("Edit", "Edit", new { id = item.CustomerID }) |
                @Html.ActionLink("Details", "Details", new { id = item.CustomerID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.CustomerID })
            </div>
            
            
        </div>

        }

    </div>

